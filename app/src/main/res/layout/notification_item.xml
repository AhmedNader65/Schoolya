<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="5"
              android:paddingTop="4dp"
              android:layout_marginBottom="4dp"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="80dp"
                   android:layout_height="match_parent"
                    android:src="@drawable/icon_circle"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="@color/white"
                  android:text="NOV\n16"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:id="@+id/date"
        />
    </RelativeLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="4"
                  android:minHeight="50dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="8dp"
                  android:orientation="horizontal">
    <LinearLayout android:layout_width="match_parent"
                  android:minHeight="70dp"
                  android:layout_marginLeft="12dp"
                  android:orientation="horizontal"
                  android:background="@drawable/notification_back"
                  android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/kid_pic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
        android:src="@drawable/kid"
        />
        <LinearLayout
            android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/header"
                  android:text="Student of the month"
                  android:textStyle="bold"
                  android:paddingLeft="8dp"
                  android:paddingTop="4dp"
                  android:textSize="16sp"
                  android:textColor="@color/white"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:id="@+id/content"
                  android:text="Congratulation to the student of the month, Ahmed Nader"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:textSize="16sp"
                  android:textColor="@color/white"
        />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>